[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[gpg]
    program = /usr/local/bin/gpg
[commit]
    gpgsign = true
[alias]
    add-unmerged = "!git add `git diff --name-only --diff-filter=U`"
    amend = "!git commit -a --amend"
    amendp = "!git amend && git pushf"
    ammend = "!git amend"
    ammendp = "!git amendp"
    branch-clean = "!git branch --merged | egrep -v \"(^\\*|master|dev)\" | xargs --no-run-if-empty git branch -d"
    cdiff = "!git diff --cached"
    edit-unmerged = "!$EDITOR -p `git diff --name-only --diff-filter=U`"
    latest = "!git checkout master && git fetch --prune && git rebase origin/master && git branch-clean"
    log-merges = "!git log --first-parent --pretty='format:%aD    %h    %an    %s'"
    pushf = "!git push origin +$(git rev-parse --abbrev-ref HEAD)"
    pushu = "!git push origin $(git rev-parse --abbrev-ref HEAD) -u"
    undo = "!git reset --soft HEAD~1"
    update = "!git fetch --prune && git rebase origin/master"
[rerere]
    enabled = true
[diff]
    noprefix = true
[pull]
    rebase = false

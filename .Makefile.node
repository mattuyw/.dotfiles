N_PREFIX=$(HOME)/.n
PATH:=$N_PREFIX/bin:$(PATH)

upgrade::
	npm upgrade -g

npm/%: ## install node package
npm/%: $(N_PREFIX)/bin/node $(N_PREFIX)/lib/node_modules/%
	@

$(N_PREFIX)/lib/node_modules/%:
	npm install -g $*

$(N_PREFIX)/bin/node:
	bash -c 'bash <(curl https://raw.githubusercontent.com/tj/n/master/bin/n) lts'


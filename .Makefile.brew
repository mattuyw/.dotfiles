brew/fish: brew-update
	brew install fish --HEAD

brew/%: brew-update
	brew install $* $(BREW_OPTIONS)

brew-cask/%: brew-update
	brew list --cask \
		| grep $$(echo $* | rev | cut -d/ -f1 | rev) > /dev/null \
		|| brew cask install $(CASK_OPTIONS) $*

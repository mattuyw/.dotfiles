export HOMEBREW_NO_AUTO_UPDATE=1
export HOMEBREW_NO_INSTALL_CLEANUP=1
export HOMEBREW_FORCE_BREWED_CURL=1

OS=$(shell uname)

ifeq "$(OS)" "Darwin"
brew: ## install all brew packages/apps
brew: brew-tools
brew: brew-network
brew: brew-docker
brew: brew-graphics
brew: brew-pandoc
brew: brew-gpg
brew: brew-other
brew: brew-casks
brew: brew-fonts
	brew cleanup
else
brew:
endif

ifeq "$(OS)" "Darwin"
brew-upgrade:  ## upgrade all brew packages/apps
	brew list --formula | grep -v pandoc | xargs brew upgrade
	brew upgrade --cask
	brew cleanup
else
brew-upgrade:
endif

brew-update:
	brew update
	brew cleanup

